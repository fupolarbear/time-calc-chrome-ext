{
  "manifest_version": 2,

  "name": "Life Is Short",
  "description": "Calculate how much time you waste in web pages. by pb.",
  "version": "1.8",

  "background" : {
    "scripts": ["background.js"]
  },
  
  "page_action": {
    "default_icon": "url-icon.png",
    "default_title": "timer is running",
	"default_popup": "popup.html"
  },
  
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["timer.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  
  "permissions": [
	"storage",
    "activeTab",
    "tabs"
  ]
}
